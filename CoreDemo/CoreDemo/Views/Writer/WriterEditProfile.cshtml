@model EntityLayer.Concrete.Writer


@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}



@using (Html.BeginForm("WriterEditProfile","Writer",FormMethod.Post))
{

<div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                <h4 class="card-title">Profil Güncelleme</h4>
                  <br>
                @Html.HiddenFor(x=> x.WriterId, new {@class ="form-control"})
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x=> x.WriterName, new {@class ="form-control"})
                      </div>
                      <div class="form-group">
                        @Html.TextBoxFor(x=> x.WriterMail, new {@class ="form-control"})
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Parola</label>
                        @Html.PasswordFor(x=> x.WriterPassword, new {@class ="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Profil Fotoğrafı</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            @Html.TextBoxFor(x=> x.WriterImage, new {@class ="form-control"})
                          <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Fotoğraf Seç</button>
                          </span>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputCity1">Hakkında</label>
                        @Html.TextAreaFor(x=> x.WriterAbout,10,3, new {@class ="form-control"})
                      </div>
                      <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    </form>
                  </div>
                </div>
              </div>
}

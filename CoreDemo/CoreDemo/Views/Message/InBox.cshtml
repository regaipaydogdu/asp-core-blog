@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<h1>Gelen Kutusu</h1>

<table class=" table table-striped">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageId</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@item.MessageDate</td>
            <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-danger">Mesajı Aç</a></td>
        </tr>
    }
</table>

<a href="/Message/SenMessage" class="btn btn-primary">Yeni Mesaj Oluştur</a>

